@using System.Web.Optimization
@using Trek.Models
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <title>Nampa 16th 21st Trek</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jquerycountdown")
        @RenderSection("pageScripts", required: false)
       
        <script type="text/javascript">

            $(function() {
                $('nav li ul').hide().removeClass('fallback');
                $('nav li').hover(function() {
                    $('ul', this).stop().slideToggle(200);
                });
            });

            $(document).ready(function () {
                var newYear = new Date();
                newYear = new Date(2013, 07-1, 17, 6);
                $('#defaultCountdown').countdown({ until: newYear,
                                        timezone: -6});

            });
            
            
        </script> 
    </head>
    <body>
        <div id="header">
            
                <div>
                    <div id="banner">
                        <span class="Three-Dee">TRUE TO THE FAITH</span><span id="defaultCountdown"></span>
                    </div>
                    <div class="subHeading">
                        Nampa 16th and 21st Wards Youth Handcart Pioneer Trek 2013
                    </div>
                    <div class="navigation">
                        <nav>
                            <ul>
                                <li>
                                    @Html.ActionLink("Home", "Index", "Home") 
                                </li>
                                <li>
                                    <a href="#">Preparation</a>
                                    <ul class="fallback">
                                        <li>
                                            @Html.ActionLink("Spiritual", "Spiritual", "Preparation")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Physical", "Physical", "Preparation")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Duty to God", "DutyToGod", "Preparation")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Personal Progress", "PersonalProgress", "Preparation")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Packing List", "PackingList", "Preparation")
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Registration</a>
                                    <ul class="fallback">
                                        <li>
                                             @Html.ActionLink("Registration Form", "RegistrationForm", "Registration")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Permission Slip", "PermissionSlip", "Registration")
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Heritage</a>
                                    <ul class="fallback">
                                        <li>
                                            @Html.ActionLink("Pioneer Stories", "PioneerStories", "Heritage")
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Ma/Pa Training</a>
                                    <ul class="fallback">
                                        <li>
                                             @Html.ActionLink("Roles & Responsibilities", "RolesResponsibilities", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Trek Family", "TrekFamily", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Spiritual Preparation", "SpiritualPreparation", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Outdoor Skills", "OutdoorSkills", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Medical and Safety", "MedicalSafety", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Meals", "Meals", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Schedule", "Schedule", "MaPa")
                                        </li>
                                        <li>
                                             @Html.ActionLink("Logistics", "Logistics", "MaPa")
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Contacts</a>
                                </li>
                            </ul>
                        </nav>
                    </div> <!-- navigation -->
                </div> <!--content wrapper -->    
            
        </div> <!-- header -->
        <div id="container">
            <div id="aside">
                
                @Html.Partial("ImportantDatesPartial")  
                @Html.Partial("ImportantDocumentsPartial", DataClasses.GetFiles())
            </div>
           @RenderBody()     
        </div> <!-- container -->
        <footer>
            <div id="footer">
                <div class="float-center">
                    <p>&copy; @DateTime.Now.Year - Ergoe Inc.</p>
                </div> <!-- float-left -->   
            </div> <!--footer --> 
        </footer>
    </body >
</html>





 

